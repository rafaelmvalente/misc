#include <stdio.h>

int main()
{
    int pessoa_bloqueada;
    int senha_valida;
    int cartao_acesso;
    printf("Digite se a pessoa está bloqueada. 1 para caso ela esteja bloqueada e 0 caso ela não esteja bloqueada: ");
    scanf("%d", & pessoa_bloqueada);
    printf("Digite se a senha é válida. 1 para caso a senha seja válida e 0 caso ela não seja válida: ");
    scanf("%d", & senha_valida);
    printf("Digite se a pessoa tem o cartão de acesso. 1 para caso ela tenha e 0 caso ela não tenha: ");
    scanf("%d", & cartao_acesso);
    if ((pessoa_bloqueada == 1) & (senha_valida == 1) & (cartao_acesso == 1)) {
        printf("Acesso liberado.");
    }
    else {
        printf("Acesso negado.");
    }
    
    

    return 0;
}