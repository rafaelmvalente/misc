#include <stdio.h>

int main()
{
    int n;
    int X[20];
    int cont_par = 0, cont_multiplo_5 = 0;
    
    printf("Digite o tamanho do vetor (máximo 20): ");
    scanf("%d", & n);
    if(n > 20 || n < 1) {
        printf("Tamanho inválido.");
        return 1;
    }
    
    for(int i = 0; i < n; i++) {
        printf("X[%d]: ", i);
        scanf("%d", & X[i]);
        
        if(X[i] % 2 == 0) {
            cont_par++;
        }
        if(X[i] % 5 == 0) {
            cont_multiplo_5++;
        }
    }
    for(int i = 0; i < n; i++) {
        printf("\nVetor X: %d", X[i]);
    }
    printf("\nPar: %d", cont_par);
    printf("\nMúltiplo de 5: %d", cont_multiplo_5);

    return 0;
}